<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="clock">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- This theme is similar to the Theme.Dialog.Alert but does not rely on a
         non-public resource. -->
    <style name="alarm_alert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>




    <style name="alarm_list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="title_btn_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ios_navigation_bar_title_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/ioslike_right_btn</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowColor">@color/ios_navigation_bar_title_shadow_color</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

     <style name="titleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ios_navigation_bar_title_color</item>
        <item name="android:textSize">@dimen/ios_activity_title_size</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowColor">@color/ios_navigation_bar_title_shadow_color</item>
    </style>

     <style name="button_style">
        <item name="android:textColor">@color/ios_navigation_bar_title_color</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowColor">@color/ios_navigation_bar_title_shadow_color</item>
     </style>

      <style name="world_item_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/ios_navigation_bar_title_color</item>
     </style>

      <style name="world_item_style_1">
        <item name="android:textColor">@color/world_item_tody</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/ios_navigation_bar_title_color</item>
     </style>
</resources>
